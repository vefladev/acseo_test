{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}
{# page de connection  #}
{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="container mt-4">
		<br>
		<div class="card bg-light">
			<article class="card-body mx-auto" style="max-width: 400px;">
				<h4 class="card-title mt-3 text-center">Connexion</h4>
				<form action="{{ path('login') }}" method="post">
					<div class="form-group input-group">
						<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Email"/>
					</div>
					<div class="form-group input-group">
						<input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe"/>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<button type="submit" class="btn btn-primary btn-block">Se Connecter</button>
				</form>
			</article>
		</div>

	</div>
{% endblock %}
